<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical" >
    
     <TextView
            android:id="@+id/viewInviteListLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:text="@string/invite_list_label_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans"/>
    
    <SearchView
            android:id="@+id/memberSearchView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/standard_text_size"
            android:layout_marginTop="@dimen/top_less_margin"
            android:iconifiedByDefault="false" >
        </SearchView>
    
   
    
    <Button
            android:id="@+id/inviteButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:onClick="invite"
            android:text="@string/invite_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/create"/>
    
    <ListView
            android:id="@+id/inviteList"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/gradient_bg"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector"/>

</LinearLayout>
