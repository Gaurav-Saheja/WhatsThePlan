<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcomeCreateGroupLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/standard_text_size"   
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/createGroupErrorField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_no_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="sans"
            android:textColor="#FF0000" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/newGroupNameValue"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:ems="10"
            android:typeface="sans"
            android:textSize="@dimen/standard_text_size"
            android:hint="@string/new_group_name_label"
            android:inputType="textPersonName"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/selectGroupImageButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:onClick="selectGroupImage"
            android:text="@string/select_image_button" 
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/create"/>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/groupPicView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/top_less_margin"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal" 
            android:contentDescription="@string/upload_group_pic_description"
            android:background="@drawable/image_border"/>
     </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/registerGroupButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:onClick="goFromCreateGroupToViewGroups"
            android:text="@string/register_group_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/button" />

    </LinearLayout>
    

</GridLayout>
